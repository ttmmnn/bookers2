<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/sidebar', user:@user,book:@book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@books.user.id) do %>
                <%= image_tag @user.get_profile_image(100,100) %>
                <br>
                <%= @books.user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@books.id) do %>
                <%= @books.title %></td>
              <% end %>
            <td><%= @books.body %></td>
            <td>
              <% if @books.user == current_user %>
                <%= link_to "Edit", edit_book_path(@books),class:"btn btn-sm btn-success" %>
              <% end %>
            </td>
            <td>
              <% if @books.user == current_user %>
                <%= link_to "Destroy", book_path(@books), method: :delete,class:"btn btn-sm btn-danger",data:{confirm:"本当に消しますか？"} %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>