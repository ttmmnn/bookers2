<h1>Books#index</h1>


<h2>New book</h2>
  <%= form_with model:@book do |f| %>
    <div>
    <label for="book_title">Title</label><br>
      <%= f.text_field :title %>
    </div>
    <div>
    <label for="book_opinion">Opinion</label><br>
      <%= f.text_area :body %>
    </div>
    <div>
      <%= f.submit 'Create Book' %>
    </div>
  <% end %>

<h2>Books</h2>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <% @books.each do |book| %>
    <tbody>
      <tr>
        <td>user_image</td>
        <td>
          <%= link_to book_path(book.id) do %>
            <%= book.title %></td>
          <% end %>
        <td><%= book.body %></td>
      </tr>
    </tbody>
  <% end %>
</table>
