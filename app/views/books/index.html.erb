<h1>Books#index</h1>


<h2>New book</h2>
  <%= form_with model:@book do |f| %>
    <div>
    <label for="book_title">Title</label><br>
      <%= f.text_field :title %>
    </div>
    <div>
    <label for="book_opinion">Opinion</label><br>
      <%= f.text_area :body %>
    </div>
    <div>
      <%= f.submit 'Create Book' %>
    </div>
  <% end %>